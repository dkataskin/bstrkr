<resources>
  <style name="BusTrackerTheme.Base" parent="Theme.AppCompat.Light">
  	<item name="android:windowBackground">@color/background_light</item>
	<!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
	<!-- colorPrimary is used for the default action bar background -->
	<item name="colorPrimary">#FFFFFF</item>
	<!-- colorPrimaryDark is used for the status bar -->
	<item name="colorPrimaryDark">#1976D2</item>
	<!-- colorAccent is used as the default value for colorControlActivated
     	 which is used to tint widgets -->
	<item name="colorAccent">#FF4081</item>
  </style>

  <style name="BusTrackerTheme" parent="BusTrackerTheme.Base">
  </style>

  <style name="Theme.Splash" parent="BusTrackerTheme">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <!-- ListPrimaryTitle -->
  <style name="ListPrimaryTitle" parent="@android:style/TextAppearance.Medium">
	<item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <!-- ListSecondaryTitle -->
  <style name="ListSecondaryTitle" parent="@android:style/TextAppearance.Small">
	<item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/text_secondary</item>
  </style>

  <!-- ListItemRegular -->
  <style name="ListItemRegular" parent="@android:style/TextAppearance.Medium">
	<item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <!-- ListItemBold -->
  <style name="ListItemBold" parent="ListItemRegular">
	<item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <!-- ListItemSubtle -->
  <style name="ListItemSubtle" parent="ListItemRegular">
    <item name="android:textColor">@color/text_secondary</item>
  </style>

  <!-- ListHeaderIcon -->
  <style name="ListHeaderIcon">
  	<item name="android:layout_gravity">center_vertical</item>
  	<item name="android:layout_width">32dp</item>
  	<item name="android:layout_height">32dp</item>
  	<item name="android:scaleType">centerInside</item>
  </style>

  <!-- ListItemIcon -->
  <style name="ListItemIcon">
  	<item name="android:layout_gravity">center_vertical</item>
  	<item name="android:layout_width">32dp</item>
  	<item name="android:layout_height">32dp</item>
  	<item name="android:scaleType">centerInside</item>
  </style>
</resources>
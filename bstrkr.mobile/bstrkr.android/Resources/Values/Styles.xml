<resources>
  <style name="BusTrackerTheme.Base" parent="Theme.AppCompat.Light">
  	<item name="android:windowBackground">@color/background_light</item>
  	<item name="windowNoTitle">true</item>
  	<item name="windowActionBar">false</item>
	<!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
	<!-- colorPrimary is used for the default action bar background -->
	<item name="colorPrimary">#0fa389</item>
	<!-- colorPrimaryDark is used for the status bar -->
	<item name="colorPrimaryDark">#0fa389</item>
	<!-- colorAccent is used as the default value for colorControlActivated
     	 which is used to tint widgets -->
	<item name="colorAccent">#0fa389</item>
  </style>

  <style name="BusTrackerTheme" parent="BusTrackerTheme.Base">
  </style>

  <item name="header_shadow" type="drawable">@drawable/bottom_shadow</item>

  <style name="Theme.Splash" parent="BusTrackerTheme">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <!-- ListPrimaryTitle -->
  <style name="ListPrimaryTitle" parent="@android:style/TextAppearance.Medium">
	<item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <!-- ListSecondaryTitle -->
  <style name="ListSecondaryTitle" parent="@android:style/TextAppearance.Small">
	<item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/text_secondary</item>
  </style>

  <!-- ListItemRegular -->
  <style name="ListItemRegular" parent="@android:style/TextAppearance.Medium">
	<item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <!-- ListItemRegularSmall -->
  <style name="ListItemRegularSmall" parent="@android:style/TextAppearance.Small">
	<item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <!-- ListItemBold -->
  <style name="ListItemBold" parent="ListItemRegular">
	<item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/text_primary</item>
  </style>

  <!-- ListItemSubtle -->
  <style name="ListItemSubtle" parent="ListItemRegular">
    <item name="android:textColor">@color/text_secondary</item>
  </style>

  <!-- ListItemSubtleSmall -->
  <style name="ListItemSubtleSmall" parent="ListItemRegularSmall">
    <item name="android:textColor">@color/text_secondary</item>
  </style>

  <!-- ListHeaderIcon -->
  <style name="ListHeaderIcon">
  	<item name="android:layout_gravity">center_vertical</item>
  	<item name="android:layout_width">32dp</item>
  	<item name="android:layout_height">32dp</item>
  	<item name="android:scaleType">centerInside</item>
  </style>

  <!-- ListItemIcon -->
  <style name="ListItemIcon">
  	<item name="android:layout_gravity">center_vertical</item>
  	<item name="android:layout_width">32dp</item>
  	<item name="android:layout_height">32dp</item>
  	<item name="android:scaleType">centerInside</item>
  </style>

	<style name="BusTrackerProgressBar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
		<item name="spb_stroke_separator_length">0dp</item>
		<item name="spb_sections_count">2</item>
		<item name="spb_speed">1.7</item>
		<item name="android:interpolator">@android:anim/accelerate_decelerate_interpolator</item>
		<item name="spb_mirror_mode">true</item>
		<item name="spb_reversed">true</item>
		<item name="spb_colors">@array/progressbar_colors</item>
	</style>

	 <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>

    <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
        <item name="android:textColor">#ffeeeeee</item>
    </style>
</resources>